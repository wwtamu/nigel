{
  "name": "nigel",
  "description": "Desktop IIIF curation tool",
  "productName": "nigel",
  "author": "William Welling <wwelling@outlook.com>",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "main": "dist/electron/main.js",
  "scripts": {
    "ng": "ng",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "build": "ng build --base-href ./",
    "build:electron": "tsc --p src/electron",
    "build:prod": "ng build --prod --base-href ./",
    "rebuild": "electron-rebuild -f -w sqlite3",
    "postinstall": "electron-builder install-app-deps",
    "start": "concurrently --kill-others \"ng serve\" \"npm run build:electron && wait-on http://localhost:4200/index.html && electron . --serve\"",
    "start:electron": "npm run build:prod && npm run build:electron && electron .",
    "package:mac": "npm run build:prod && npm run build:electron && npm run rebuild && node scripts/build.js mac",
    "package:windows": "npm run build:prod && npm run build:electron && npm run rebuild && node scripts/build.js windows",
    "package:installer:mac": "npm run package:mac && electron-installer-dmg ./builds/nigel-darwin-x64/nigel.app nigel --out=builds --overwrite",
    "package:installer:windows": "npm run package:windows && node scripts/windowsInstaller.js"
  },
  "dependencies": {
    "@angular/animations": "~9.0.7",
    "@angular/cdk": "^9.1.3",
    "@angular/common": "~9.0.7",
    "@angular/compiler": "~9.0.7",
    "@angular/core": "~9.0.7",
    "@angular/flex-layout": "^9.0.0-beta.29",
    "@angular/forms": "~9.0.7",
    "@angular/material": "^9.1.3",
    "@angular/platform-browser": "~9.0.7",
    "@angular/platform-browser-dynamic": "~9.0.7",
    "@angular/router": "~9.0.7",
    "electron-store": "^5.1.1",
    "hammerjs": "^2.0.8",
    "ngx-electron": "^2.2.0",
    "rxjs": "~6.5.4",
    "sqlite3": "^4.1.1",
    "tslib": "^1.11.1",
    "typeorm": "^0.2.24",
    "zone.js": "~0.10.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.900.7",
    "@angular/cli": "~9.0.7",
    "@angular/compiler-cli": "~9.0.7",
    "@angular/language-service": "~9.0.7",
    "@types/jasmine": "~3.5.9",
    "@types/jasminewd2": "~2.0.8",
    "@types/node": "~12.12.30",
    "codelyzer": "^5.2.1",
    "concurrently": "^5.1.0",
    "electron": "^8.1.1",
    "electron-builder": "^22.4.1",
    "electron-installer-dmg": "^3.0.0",
    "electron-packager": "^14.2.1",
    "electron-rebuild": "^1.10.1",
    "electron-winstaller": "^4.0.0",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.4.1",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~2.1.1",
    "karma-jasmine": "~3.1.1",
    "karma-jasmine-html-reporter": "^1.5.2",
    "npm-run-all": "^4.1.5",
    "protractor": "~5.4.3",
    "ts-node": "~8.7.0",
    "tslint": "~5.20.1",
    "tslint-angular": "^3.0.2",
    "typescript": "~3.7.5",
    "wait-on": "^4.0.1"
  }
}